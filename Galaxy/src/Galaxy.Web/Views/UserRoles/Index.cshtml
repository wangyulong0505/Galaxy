@section styles{
    <link href="~/lib/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bootstrap-table/dist/bootstrap-table.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/base.css" rel="stylesheet" asp-append-version="true" />
    <style type="text/css">
        .trchange {
            background-color: #08C;
            color: white;
        }
    </style>
}
@section scripts{
    <script src="~/lib/bootstrap-table/dist/bootstrap-table.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-table/dist/locale/bootstrap-table-zh-CN.js" asp-append-version="true"></script>
    <script src="~/view-resources/Views/UserRoles/Index.js" asp-append-version="true"></script>
}
<div class="content-wrapper" id="mainDiv" style="min-height: 935px;">
    <section class="content-header">
        <h1>角色管理</h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">系统管理</a></li>
            <li class="active">角色管理</li>
        </ol>
    </section>
    <!--隐藏域 begin-->
    <input type="hidden" id="roleId" value="@ViewData["RoleId"]" />
    <!--隐藏域 end-->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <!-- /.box-header -->
                    <div class="box-header with-border">
                        <h5 class="box-title" style="font-size:14px;">未绑定该角色的用户列表</h5>
                        <button type="button" id="btn_add_ur" class="btn btn-sm close" title="用户绑定角色">
                            <i class="fa fa-arrow-right"></i>
                        </button>
                    </div>
                    <div class="dataTables_filter" id="searchDiv_unselected">
                        <input type="hidden" value="" name="roleId" iscondition="false">
                        <input placeholder="请输入用户名" id="txtName" name="name" class="form-control form-control-sm" type="search" likeoption="true">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary" data-btn-type="search">查询</button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="userRole_unselected_table"></table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <div class="col-md-6">
                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h5 class="box-title" style="font-size:14px;float:right">已绑定该角色的用户列表</h5>
                        <button type="button" id="btn_remove_ur" class="btn btn-sm close" style="float:left" title="用户解绑角色">
                            <i class="fa fa-arrow-left"></i>
                        </button>
                    </div>
                    <div class="dataTables_filter" id="searchDiv_selected">
                        <input placeholder="请输入用户名" name="txtUsername" class="form-control" type="search" likeoption="true" />
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary" data-btn-type="search">查询</button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="userRole_selected_table"></table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
</div>


